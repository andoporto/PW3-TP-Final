@model Cinemania.Sedes

@{
    Layout = "/Views/Shared/_LayoutAdministracion.cshtml";
}




    <div class="container">
        @using (Html.BeginForm("/NuevoSede", "Administracion", new { @class = "panel-body" }))
        {
            <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

                <!-- CABECERA -->
                <h2 class="text-center">Nueva Sede</h2>

                <!-- INPUT NOMBRE -->
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    @Html.TextBoxFor(m => m.Nombre, new { placeholder = "Ingresar Nombre", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                </div>

                <!-- INPUT DIRECCION -->
                <div class="form-group">
                    <label for="direcion">Direccion</label>
                    @Html.TextBoxFor(m => m.Direccion, new { placeholder = "Ingresar Direccion", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
                </div>

                <!-- INPUT PRECIO ENTRADA -->
                <div class="form-group">
                    <label for="precio">Precio Entrada</label>
                    @Html.TextBoxFor(m => m.PrecioGeneral, new { placeholder = "Ingresar Precio Entrada", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PrecioGeneral, "", new { @class = "text-danger" })
                </div>

                <!-- BOTON GUARDAR -->
                <div class="text-center">
                    <input type="submit" class="btn btn-success" value="Guardar" />

                    <!-- LINK SALIR -->
                    <a href="./Sedes" class="btn btn-default">Cancelar</a>
                </div>

            </div>
        }
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

